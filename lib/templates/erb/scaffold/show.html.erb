<%%- model_class = <%= singular_table_name.classify %> -%>
<div class="page-header">
  <h1><%%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
<%- attributes.each do |column| -%>
  <dt><strong><%%= model_class.human_attribute_name(:<%= column.name %>) %>:</strong></dt>
  <dd><%%= @<%= singular_table_name %>.<%= column.name %> %></dd>
<%- end -%>
</dl>

<%%= link_to 'Mostrar Todos',
                <%= plural_table_name %>_path, :class => 'btn btn-default' %>
<%%= link_to 'Editar',
              edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), :class => 'btn btn-default' %>
<%%= link_to 'Eliminar',
              <%= singular_table_name %>_path(@<%= singular_table_name %>),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>