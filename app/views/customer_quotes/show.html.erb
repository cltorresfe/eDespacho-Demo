<%- model_class = CustomerQuote -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @customer_quote.email %></dd>

  <dt><strong><%= model_class.human_attribute_name(:full_name) %>:</strong></dt>
  <dd><%= @customer_quote.full_name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:rut) %>:</strong></dt>
  <dd><%= @customer_quote.rut %></dd>

  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @customer_quote.address %></dd>

  <dt><strong><%= model_class.human_attribute_name(:total_quote) %>:</strong></dt>
  <dd><%= @customer_quote.total_quote %></dd>

  <dt><strong><%= model_class.human_attribute_name(:user) %>:</strong></dt>
  <dd><%= @customer_quote.user %></dd>

</dl>

<%= link_to 'Mostrar Todos',
                customer_quotes_path, :class => 'btn btn-default' %>
<%= link_to 'Editar',
              edit_customer_quote_path(@customer_quote), :class => 'btn btn-default' %>
<%= link_to 'Eliminar',
              customer_quote_path(@customer_quote),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás Seguro?')) },
              :class => 'btn btn-danger' %>