<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-primary">
    <div class="panel-heading"><%= t('.sign_in') %></div>
    <div class="panel-body">
    <!-- Login Form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!-- Username Field -->
        <div class="row">
          <div class="form-group col-xs-12">
            <%= f.label :email %>
            <div class="input-group">
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email'  %>
              <span class="input-group-btn">
                <label class="btn btn-primary"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></label>
              </span>
            </div>
          </div>
        </div>
        <!-- Content Field -->
        <div class="row">
          <div class="form-group col-xs-12">
            <%= f.label :password %>
            <div class="input-group">
              <%= f.password_field :password, class: 'form-control', placeholder: 'ContraseÃ±a', autocomplete: "off"  %>
              <span class="input-group-btn">
                <label class="btn btn-primary"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></label>
              </span>
            </div>
          </div>
        </div>
        <!-- Content Field -->
        <div class="row">
          <div class="form-group col-xs-12">
            <%= f.check_box :remember_me %>      
            <%= f.label :remember_me %>
          </div>
        </div>
        <!-- Login Button -->
        <div class="row">
          <div class="form-group col-xs-4">
            <%= f.submit t('.sign_in'), class: 'btn btn-primary' %> <br>
          </div>
        </div>
        <!--
        <div class="row">
          <div class="form-group col-xs-4">
            <%= render "devise/shared/links" %>
          </div>
        </div>  -->
      <% end %>
    <!-- End of Login Form -->
    </div>
  </div>
</div>

