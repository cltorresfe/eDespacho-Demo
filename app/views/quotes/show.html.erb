<%- model_class = Quote -%>
<div class="page-header">
  <h1>Cotización</h1>
</div>

<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:id_product) %>:</strong></dt>
  <dd><%= @quote.id_product %></dd>

  <dt><strong><%= model_class.human_attribute_name(:cost_product) %>:</strong></dt>
  <dd><%= @quote.cost_product %></dd>

  <dt><strong><%= model_class.human_attribute_name(:margin) %>:</strong></dt>
  <dd><%= @quote.margin %></dd>

  <dt><strong><%= model_class.human_attribute_name(:net_price) %>:</strong></dt>
  <dd><%= @quote.net_price %></dd>

  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @quote.price %></dd>

  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @quote.quantity %></dd>

  <dt><strong><%= model_class.human_attribute_name(:total_price) %>:</strong></dt>
  <dd><%= @quote.total_price %></dd>

</dl>

<%#= link_to 'Mostrar Todos', quotes_path, :class => 'btn btn-default' %>
<%= link_to 'Editar',
              edit_quote_path(@quote), :class => 'btn btn-default' %>
<%= link_to 'Eliminar',
              quote_path(@quote),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás seguro?')) },
              :class => 'btn btn-danger' %>