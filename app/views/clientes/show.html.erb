<%- model_class = Cliente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:run_cliente) %>:</strong></dt>
  <dd><%= @cliente.run_cliente %></dd>

  <dt><strong><%= model_class.human_attribute_name(:dv_cliente) %>:</strong></dt>
  <dd><%= @cliente.dv_cliente %></dd>

  <dt><strong><%= model_class.human_attribute_name(:nombres_cliente) %>:</strong></dt>
  <dd><%= @cliente.nombres_cliente %></dd>

  <dt><strong><%= model_class.human_attribute_name(:apellidos_cliente) %>:</strong></dt>
  <dd><%= @cliente.apellidos_cliente %></dd>

</dl>

<%= link_to 'Mostrar Todos',
                clientes_path, :class => 'btn btn-default' %>
<%= link_to 'Editar',
              edit_cliente_path(@cliente), :class => 'btn btn-default' %>
<%= link_to 'Eliminar',
              cliente_path(@cliente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás Seguro?')) },
              :class => 'btn btn-danger' %>